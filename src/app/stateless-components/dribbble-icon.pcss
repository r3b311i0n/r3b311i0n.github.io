.dribbble-ball {
    animation: ball-move 1.5s cubic-bezier(.15, .44, .27, 1) 100ms;
}

@keyframes ball-move {
    0% {
        transform: translateX(-100%) rotate(0deg);
        transform-origin: 50% 50%;
    }
    100% {
        transform: translateY(0%) rotate(360deg);
        transform-origin: 50% 50%;
    }
}
